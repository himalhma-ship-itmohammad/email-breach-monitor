def check_email_breaches(email): """ржЗржорзЗржЗрж▓ ржарж┐ржХрж╛ржирж╛рж░ ржмрзНрж░рж┐ржЪ рждрж╛рж▓рж┐ржХрж╛ ржлрзЗрж░ржд ржжрзЗрзЯред""" headers = {'User-Agent': 'ccs-team-monitor/1.0'} if HIBP_API_KEY: headers['hibp-api-key'] = HIBP_API_KEY

url = f"{HIBP_BASE}/breachedaccount/{email}"
params = {'truncateResponse': 'false'}
try:
    resp = requests.get(url, headers=headers, params=params, timeout=10)
    if resp.status_code == 200:
        return resp.json()
    elif resp.status_code == 404:
        return []  # no breach found
    elif resp.status_code == 401:
        print('API key invalid or missing for endpoints that require auth.')
        return None
    else:
        print(f'Unexpected status {resp.status_code}: {resp.text}')
        return None
except requests.RequestException as e:
    print('Network error:', e)
    return None

---------------------------

