HIBP_API_KEY = None  # ржпржжрж┐ ржерж╛ржХрзЗ, ржПржЦрж╛ржирзЗ рж╕рзЗржЯ ржХрж░рзЗ ржжрж┐рждрзЗ ржкрж╛рж░рзЛ HIBP_BASE = "https://haveibeenpwned.com/api/v3"

